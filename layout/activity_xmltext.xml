<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vidhyalearning.myquizapp.XMLText">

    <EditText
        android:id="@+id/xmlText"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:ems="10"
        android:hint="@string/sample_records_n_qaset_n_question_add_55_and_66_question_n_answer_121_answer_n_level_ist_grade_level_n_subject_maths_subject_n_qaset_n_qaset_n_question_what_is_opposite_of_cry_question_n_answer_laugh_or_laugh_answer_n_level_ist_grade_level_n_subject_english_subject_n_qaset_n_records"
        android:inputType="textMultiLine"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/deleteQnBtn"
        android:layout_below="@+id/textView8" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:text="Enter Questions in XML format"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp" />

    <Button
        android:id="@+id/submitBtn"
        android:onClick="uploadQuestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
