<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/editquizview"
    tools:context="com.vidhyalearning.myquizapp.editQuestion">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView5"

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Question:"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/questionText"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView5"
                android:ems="10"
                android:inputType="textMultiLine" />
            <EditText
                android:id="@+id/categorytext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView5"
                android:ems="10"
                android:inputType="textMultiLine" />

            <ImageView
                android:id="@+id/imgView1"
                android:layout_width="384dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                />
            <Button
                android:id="@+id/imageBtn"
                android:onClick="capturePhotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Photo"
                android:layout_marginRight="34dp"
                android:layout_marginEnd="34dp"
                android:layout_alignTop="@+id/imgView1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Answer:"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/answerText"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:textSize="14sp"
                android:hint="For alternate answers: Press Enter and type text."
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView5"
                android:ems="10"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Level"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2"
                android:layout_alignTop="@+id/imgView1"
                android:layout_marginLeft="21dp"
                android:prompt="@string/spinner_title"
                android:layout_marginStart="21dp"
                android:layout_marginTop="26dp" />

            <Button
                android:id="@+id/updateQuestionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imgView1"
                android:layout_gravity="center"
                android:layout_marginEnd="34dp"
                android:layout_marginRight="34dp"
                android:onClick="submitQuestion"
                android:text="Update" />

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imgView1"
                android:layout_gravity="center"
                android:layout_marginEnd="34dp"
                android:layout_marginRight="34dp"
                android:onClick="deleteQA"
                android:text="Delete" />
            <Button
                android:id="@+id/addButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imgView1"
                android:layout_gravity="center"
                android:layout_marginEnd="34dp"
                android:layout_marginRight="34dp"
                android:onClick="addQA"
                android:text="Add Question" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
